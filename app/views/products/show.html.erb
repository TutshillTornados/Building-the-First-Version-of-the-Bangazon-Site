
<p>
  <strong>
    Product:
  </strong>
  <%= @product.product_name %>
</p>
<p>
<% @product.photos.each do |photo| %>
<%= link_to image_tag(photo.image.url(:medium)), photo.image.url, data: { gallery: ''} %>
<% end %>
</p>
<p>
  <strong>
    Description:
  </strong>
  <%= @product.product_desc %>
</p>
<p>
  <strong>
    Price:
  </strong>
  <%= @product.product_price %>
</p>
<p>
  <strong>
    Quantity:
  </strong>
  <%= @product.quantity %>
</p>
<p>
  <strong>
    Local Delivery:
  </strong>
  <%= @product.local_delivery %>
</p>
<% if @product.customer_id = session[:user_id] %>
  <%= link_to 'Edit', edit_product_path(@product) %>
<% end %>
<%= link_to 'Back', products_path %>
<% if logged_in? %>
<%= link_to 'Buy', products_path %>
<% end %>